<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#FFBB33"
    xmlns:android="http://schemas.android.com/apk/res/android">
	<RelativeLayout
	    android:orientation="vertical"
	    android:background="#FFBB33"
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent" >
	    
	    <RelativeLayout
	        android:id="@+id/logo_actionbar"
	        android:layout_marginTop="40dp"
	        android:background="#FFBB33"
	        android:layout_width="fill_parent"
	    	android:layout_height="wrap_content" >
	        <TextView
	            android:id="@+id/logo"
	            android:text="My Cool App"
	            android:textColor="#3377FF"
	            android:layout_centerHorizontal="true"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:padding="25dp" />
        </RelativeLayout>
	    
	    
	   <RelativeLayout
	        android:id="@+id/tagline_1"
	        android:layout_marginTop="75dp"
	        android:layout_below="@+id/logo_actionbar"
	        android:background="#FFBB33"
	        android:layout_width="fill_parent"
	    	android:layout_height="wrap_content" >
	        <TextView
	            android:id="@+id/tagline_1_text"
	            android:text="First Cool Tagline"
	            android:textColor="#000000"
	            android:layout_centerHorizontal="true"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:padding="0dp" />
        </RelativeLayout>
        
	   
	   <RelativeLayout
	        android:id="@+id/tagline_2"
	        android:layout_below="@+id/tagline_1"
	        android:background="#FFBB33"
	        android:layout_width="fill_parent"
	    	android:layout_height="wrap_content" >
	        <TextView
	            android:id="@+id/tagline_2_text"
	            android:text="Second Cool Tagline"
	            android:textColor="#000000"
	            android:layout_centerHorizontal="true"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:padding="0dp" />
        </RelativeLayout>
	    
	    <LinearLayout
	        android:id="@+id/publisher_auth" 
            android:orientation="vertical"
            android:background="#FFBB33" 
            android:layout_alignParentBottom="true"
            android:padding="10dp" 
            android:layout_width="fill_parent" 
            android:layout_height="wrap_content">

	        <LinearLayout
	            android:id="@+id/login_or_register"            
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:orientation="horizontal" >	                        
	            <Button  
		             android:id="@+id/btn_publisher_login" 
		             android:background="@drawable/rounded_edit_text"
		             android:textColor="#ffffff"
		             android:textSize="16dp"
		             android:padding="10dp" 
		             android:layout_width="wrap_content" 
		             android:layout_height="wrap_content"
		             android:layout_weight="0.5"
		             android:layout_marginTop="15dp"
		             android:layout_marginRight="2.5dp"
		             android:layout_marginBottom="15dp"
		             android:layout_marginLeft="5dp" 
		             android:text="login"   />	            
	   	        <Button  
		            android:id="@+id/btn_publisher_register"
		            android:background="@drawable/rounded_edit_text"
		            android:textColor="#ffffff"
		            android:textSize="16dp"
		            android:padding="10dp" 
		            android:layout_width="wrap_content" 
		            android:layout_height="wrap_content"
		            android:layout_weight="0.5" 
		            android:layout_marginTop="15dp"
		            android:layout_marginRight="5dp"
		            android:layout_marginBottom="15dp"
		            android:layout_marginLeft="2.5dp"  
		            android:text="register" />	   	        
	        </LinearLayout>                

        </LinearLayout>
	</RelativeLayout>
</FrameLayout>
